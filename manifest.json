{
    "manifest_version": 2,
    "version": "1.0.0",
    "name": "Parker Extension",
    "description": "Extension Practice",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "要不要點看看？"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": ["bg.js"],
        "persistent": false
    },
    "options_page": "option.html"
}